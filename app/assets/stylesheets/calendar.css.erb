body {
  width: 960px;
  margin: 0 auto;
  color: #012e3d;
}

h1 {
  text-align: center;
  font-size: 20px;
  font-weight: bold;
  color: #015367;
  background: #60b9ce;
}

body > header {
  color: #222;
  background: white;
}

body > header > p {
  margin: 5px 0;
  font-size: 14px;
}

table.calendar {
  background: #ffd9e8;
}

table, th, td {
  border: 2px solid #015367;
}

th {
  color: white;
  background: #015367;
  font-size: 14px;
  line-height: 17px;
}

td.day {
  padding: 6px 2.5px 1px;
  width: 130px;
  height: 120px;
}

td.day > header {
  text-align: center;
  font-style: italic;
  font-weight: bold;
  color: #015367;
}

section.appointment {
  margin: 3px;
  padding: 0 2px;
  height: 78px;
  position: relative;
}

section.appointment table {
  background: #fffafc;
  width: 119px;
}

section.appointment.sack table {
  background-image: url(<%= asset_path 'sack.png' %>);
}

header.recipient {
  float: right;
  color: red;
  font-weight: bold;
  font-size: 10px;
  position: absolute;
  right: 4px;
}

section.appointment table, section.appointment th, section.appointment td {
  border: 0;
}

section.appointment table {
  line-height: 24px;
  font-size: 12px;
}

section.appointment tr td:first-child {
  font-size: 8px;
}

section.appointment td {
  padding: 0 1px;
}

footer {
  margin: 6px 14px 0;
  font-size: 14px;
}

footer p {
  text-align: center;
}

footer p span {
  margin: 0 10px;
}
