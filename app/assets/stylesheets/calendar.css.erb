body {
  width: 960px;
  margin: 0 auto;
  color: #153b02;
}

h1 {
  text-align: center;
  font-size: 20px;
  font-weight: bold;
  color: #236601;
  background: #84cc60;
}

h1 input[type="button"] {
  font-size: 25px;
  margin: 5px;
}

h1 a.left, h1 a.right {
  text-decoration: none;
}

h1 a.left {
  padding-right: 20px;
}

h1 a.right {
  padding-left: 20px;
}

ul {
  padding-left: 3em;
}

body > header {
  color: #222;
  background: white;
}

body > header > p {
  margin: 5px 0;
  font-size: 14px;
}

abbr[title], acronym[title] {
  border-bottom-width: 0;
}

table.calendar {
  background: #ffd9e8;
}

table, th, td {
  border: 2px solid #236601;
}

th {
  color: white;
  background: #349902;
  font-size: 14px;
  line-height: 17px;
  font-weight: bold;
}

td.day {
  padding: 6px 2.5px 1px;
  width: 130px;
}

td.day > header {
  text-align: center;
  font-style: italic;
  font-weight: bold;
  color: #236601;
}

section.instructions {
  font-size: 12px;
  margin-bottom: 3em;
}

section.appointment {
  margin: 3px 3px 5px;
  padding: 0 2px;
  position: relative;
}

section.appointment table {
  background: #fffafc;
  width: 119px;
}

section.appointment.sack table {
  background-image: url(<%= asset_path 'sack.png' %>);
}

header.recipient {
  float: right;
  color: red;
  font-weight: bold;
  font-size: 10px;
  position: absolute;
  right: 4px;
}

section.appointment table, section.appointment th, section.appointment td {
  border: 0;
}

section.appointment table {
  line-height: 24px;
  font-size: 12px;
}

section.appointment.num_weeks1 table {
  line-height: 28px;
}

section.appointment.num_weeks2 table {
  line-height: 26px;
}

section.appointment.num_weeks3 table {
  line-height: 24px;
}

section.appointment.num_weeks4 table {
  line-height: 24px;
}

section.appointment tr td:first-child {
  font-size: 8px;
  width: 23px;
}

section.appointment td {
  padding: 0 1px;
}

footer {
  margin: 6px 14px 0;
  font-size: 14px;
}

footer p {
  text-align: center;
}

footer p span {
  margin: 0 5px;
}
