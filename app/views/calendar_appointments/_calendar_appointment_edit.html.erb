<section class="appointment <%= calendar_appointment.css_class %>" style="height: auto;">
  <% recip_number = calendar_appointment.recipient_number %>
  <header class="recipient"><%= recip_number %></header>
  <%= f.fields_for recip_number.to_s do |af| %>
    <table>
      <tr>
        <td>Name:</td>
        <td><%= af.text_field :name, :class => 'edit_input', :value => calendar_appointment.name, 'data-autocomplete-source' => :names_list %></td>
      </tr>
      <tr>
        <td>Phone:</td>
        <td><%= af.text_field :phone, :class => 'edit_input', :value => calendar_appointment.phone, 'data-autocomplete-source' => :phones_list %></td>
      </tr>
      <tr>
        <td>Email:</td>
        <td><%= af.text_field :email, :class => 'edit_input', :value => calendar_appointment.email, 'data-autocomplete-source' => :emails_list %></td>
      </tr>
      <% Figaro.env.css_classes.split.each do |lbl| %>
        <tr>
          <td></td>
          <td class="class-selection">
            <%= af.radio_button :css_class, lbl, checked: (calendar_appointment.css_class == lbl) %>
            <%= af.label "css_class_#{lbl}", lbl.truncate(9) %>
          </td>
        </tr>
      <% end %>
    </table>
  <% end %>
</section>

<% if recip_number == 1 %>
  <div style='text-align: right;'>
    <%= button_tag "Copy &darr;".html_safe, :type => :button, :class => 'copy-appointment-btn' %>
  </div>
<% end %>
