<!DOCTYPE html>
<html>
<head>
  <title><%= Figaro.env.calendar_title%></title>
  <%= favicon_link_tag %>
  <%= stylesheet_link_tag    "application" %>
  <%= content_for :head %>
  <%= javascript_include_tag "application", defer: :defer %>
  <%= csrf_meta_tags %>
</head>
<body>

<div id="flash_messages">
  <% flash.each do |key, value| %>
    <%= content_tag(:div, value, :class => "flash #{key}") %>
  <% end %>
</div>

<%= yield %>

</body>
</html>
