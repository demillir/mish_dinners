<%= render :partial => 'help' %>

<%= form_for @calendar,
             url: calendar_path(@calendar,
                                date: @calendar.start_date,
                                uuid: @calendar.unit_uuid) do |f| %>
  <%= link_to 'Help',
              '#',
              :onclick => "$('#help-section').toggle(1000); return false;",
              :style => 'float: right; font-size: larger; margin-left: 1em;' %>
  <%= link_to 'Settings',
              edit_setting_path(@calendar.id, :uuid => @calendar.unit_uuid),
              :style => 'float: right; font-size: larger; margin-left: 1em;' %>

  <%= render :partial => 'print_controls', locals: {calendar: @calendar} %>
  <%= render :partial => 'form_buttons', locals: {calendar: @calendar} %>

  <%= render :partial => 'heading', locals: {f: f} %>
  <%= render :partial => 'calendar_table', locals: {f: f} %>

  <%= render :partial => 'form_buttons', locals: {calendar: @calendar} %>
<% end %>

<%= javascript_tag "var names_list  = #{@calendar.names_list};"  %>
<%= javascript_tag "var phones_list = #{@calendar.phones_list};" %>
<%= javascript_tag "var emails_list = #{@calendar.emails_list};" %>
