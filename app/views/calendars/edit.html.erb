<section>
  <h2>Recommendations:</h2>
  <ul>
    <li>Use family names ("Smith", "Jones") rather than longer individual names (e.g. "Smith Family", "Joanne Jones")</li>
    <li>You can use the tab key to quickly navigate between fields</li>
    <li>Use the arrow keys to choose from the drop-down lists.  Click the tab key or the enter key to select the highlighted item.</li>
  </ul>
</section>

<%= form_for @calendar,
             method: :put,
             url: calendars_path(division_abbr: @calendar.division_abbr,
                                 unit_abbr:     @calendar.unit_abbr,
                                 uuid:          @calendar.unit_uuid) do |f| %>
  <%= edit_form_buttons %>

  <table class="calendar">
    <thead>
    <tr>
      <th>SUN</th>
      <th>MON</th>
      <th>TUE</th>
      <th>WED</th>
      <th>THU</th>
      <th>FRI</th>
      <th>SAT</th>
    </tr>
    </thead>

    <tbody>

    <%= render partial: @calendar.weeks, locals: {f: f} %>

    </tbody>
  </table>

  <%= edit_form_buttons %>
<% end %>

<%= javascript_tag "var names_list  = #{@calendar.names_list};"  %>
<%= javascript_tag "var phones_list = #{@calendar.phones_list};" %>
<%= javascript_tag "var emails_list = #{@calendar.emails_list};" %>
